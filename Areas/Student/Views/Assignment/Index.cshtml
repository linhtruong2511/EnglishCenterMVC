@{
    ViewData["Title"] = "Assignment";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    var now = DateTime.Now;

    // “Newly uploaded” = created in last 3 days (tweak as you want)
    var newWindowDays = 3;
    var newlyUploaded = (Model ?? Enumerable.Empty<EnglishCenterMVC.Models.Assignment>())
        .Where(a => (now - a.CreateAt).TotalDays <= newWindowDays)
        .OrderByDescending(a => a.CreateAt)
        .ToList();
    var available = (Model ?? Enumerable.Empty<EnglishCenterMVC.Models.Assignment>())
        .Where(a => a.Deadline >= now)
        .OrderBy(a => a.CreateAt)
        .ToList();
    var overdue = (Model ?? Enumerable.Empty<EnglishCenterMVC.Models.Assignment>())
        .Where(a => a.Deadline < now)
        .OrderByDescending(a => a.Deadline)
        .ToList();
    var onlineNew = newlyUploaded.Where(a => !string.IsNullOrWhiteSpace(a.FileUrl)).ToList();
    var onlineAvailable = available.Where(a => !string.IsNullOrWhiteSpace(a.FileUrl)).ToList();
    string FriendlyType(string? t) => string.IsNullOrWhiteSpace(t) ? "Submission" : t.Trim();
    var overdueAll = overdue; // already computed
}
@model IEnumerable<EnglishCenterMVC.Models.Assignment>

<head>
    <link rel="stylesheet" href="~/css/ass.css" />
</head>
<body>
    <div class="wrap">
        <!-- Hero -->
        <div class="hero">
            <div class="hero-inner">
                <div>
                    <div class="hero-title">Study, study more, study forever!</div>
                    <div class="hero-sub">Tập hợp bài tập tự học. Hãy hoàn thành trước hạn nộp!</div>
                    <div class="pillrow">
                        <span class="pill">Mới đăng lên: @newlyUploaded.Count</span>
                        <span class="pill">Có sẵn: @available.Count</span>
                        <span class="pill">Quá hạn: @overdue.Count</span>
                    </div>
                </div>
                <div class="pill">Student Area</div>
            </div>
        </div>

        <!-- Tabs (future-proof) -->
        <div class="tabs" role="tablist" aria-label="Assignments tabs">
            <button class="tab active" type="button"
                    role="tab" aria-selected="true"
                    aria-controls="panel-online" id="tab-online"
                    data-target="panel-online">
                Bài tập online
            </button>

            <button class="tab active" type="button"
                    role="tab" aria-selected="false"
                    aria-controls="panel-offline" id="tab-offline"
                    data-target="panel-offline">
                Bài tập tải về
            </button>

            <button class="tab" type="button"
                    role="tab" aria-selected="false"
                    aria-controls="panel-overdue" id="tab-overdue"
                    data-target="panel-overdue">
                Quá hạn
            </button>

            <button class="tab" type="button"
                    role="tab" aria-selected="false"
                    aria-controls="panel-submissions" id="tab-submissions"
                    data-target="panel-submissions">
                Bài nộp
            </button>
        </div>

        <section id="panel-online" class="tab-panel" role="tabpanel" aria-labelledby="tab-online">
            <div class="grid">
                <!-- LEFT -->
                    <!-- Newly uploaded (ONLINE only) -->
                    <div class="cardx card-pad">
                        <div class="hrow">
                            <h3>Danh sách bài</h3>
                            <div class="muted">Thời hạn trong @newWindowDays ngày</div>
                        </div>

                        @if (!onlineNew.Any())
                        {
                            <div class="muted" style="margin-top:10px;">Hiện tại chưa có bài tập online.</div>
                        }
                        else
                        {
                            <div class="alist">
                                @foreach (var a in onlineNew)
                                {
                                    var daysLeft = (a.Deadline - now).TotalDays;
                                    var isOverdue = a.Deadline < now;
                                    var isSoon = !isOverdue && daysLeft <= 2;

                                    <div class="a">
                                        <div class="a-left">
                                            <div class="ico">✦</div>
                                            <div class="a-text">
                                                <div class="a-title" title="@a.Title">@a.Title</div>
                                            <div class="a-desc">Course #@a.CourseId : @a.Description</div>

                                                <div class="meta">
                                                    @if (isOverdue)
                                                    {
                                                        <span class="tag danger">Đã hết hạn</span>
                                                    }
                                                    else if (isSoon)
                                                    {

                                                        <span class="tag warn">Sắp quá hạn</span>
                                                    }
                                                    else
                                                    {

                                                        <span class="tag ok">Làm bài</span>
                                                    }

                                                    @if (a.UpdateAt != default(DateTime) && a.UpdateAt > a.CreateAt)
                                                    {
                                                        <span class="tag">Updated: @a.UpdateAt.ToString("dd/MM/yyyy HH:mm")</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>

                                        <div class="a-right">
                                            <div class="time">
                                                Created: @a.CreateAt.ToString("dd/MM/yyyy")<br />
                                                Due: @a.Deadline.ToString("dd/MM/yyyy HH:mm")
                                            </div>
                                            <a class="btnx primary"
                                               asp-area="Student"
                                               asp-controller="Assignment"
                                               asp-action="Details"
                                               asp-route-id="@a.Id">
                                                Làm bài
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>

                <!-- RIGHT sidebar (unchanged) -->
                <div class="cardx widget">
                    @* keep your existing sidebar markup exactly *@
                    <div class="mb-2" style="display:flex; align-items:center; justify-content:space-between; gap:10px;">
                        <h3 style="margin:0; font-weight:900;">Tổng quan</h3>
                        <span class="tag">Hôm nay</span>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài mới</span>
                        <strong>@newlyUploaded.Count</strong>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài tập sẵn có</span>
                        <strong>@available.Count</strong>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài tập quá hạn</span>
                        <strong style="color:var(--danger);">@overdue.Count</strong>
                    </div>

                    <a class="btnx primary mb-2" asp-area="Student" asp-controller="Courses" asp-action="Index">Tới Khóa học</a>
                    <a class="btnx" asp-area="Student" asp-controller="Home" asp-action="Index">Về trang chủ</a>

                    <div class="muted" style="margin-top:10px; line-height:1.5;">
                        Tip: if an assignment shows “Updated”, re-check the file — instructors love last-minute “minor edits”.
                    </div>
                </div>
            </div>
        </section>

        <section id="panel-offline" class="tab-panel" role="tabpanel" aria-labelledby="tab-offline">
            <div class="grid">
                <!-- Available (DOWNLOAD + SUBMIT) -->
                <div class="cardx card-pad">
                    <div class="hrow">
                        <h3>Bài tập tải về</h3>
                        <div class="muted">Hoàn thiện bài tập trước thời hạn</div>
                    </div>

                    @if (!onlineAvailable.Any())
                    {
                        <div class="muted" style="margin-top:10px;">Không có bài tập tải về.</div>
                    }
                    else
                    {
                        <div class="alist">
                            @foreach (var a in onlineAvailable)
                            {
                                var isOverdue = a.Deadline < now;
                                var daysLeft = (a.Deadline - now).TotalDays;
                                var isSoon = !isOverdue && daysLeft <= 2;

                                var hasFile = !string.IsNullOrWhiteSpace(a.FileUrl);

                                <div class="a">
                                    <div class="a-left">
                                        <div class="ico">⬇</div>
                                        <div class="a-text">
                                            <div class="a-title" title="@a.Title">@a.Title</div>
                                            <div class="a-desc">Course #@a.CourseId : @a.Description</div>

                                            <div class="meta">

                                                @if (isOverdue)
                                                {
                                                    <span class="tag danger">Đã quá hạn</span>
                                                }
                                                else if (isSoon)
                                                {
                                                    <span class="tag warn">Sắp quá hạn</span>
                                                }
                                                else
                                                {
                                                    <span class="tag ok">Còn hạn</span>
                                                }

                                                @if (a.AllowResubmit)
                                                {
                                                    <span class="tag ok">Cho nộp lại</span>
                                                }
                                                else
                                                {
                                                    <span class="tag gray">Không nộp lại</span>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <div class="a-right">
                                        <div class="time">
                                            Created: @a.CreateAt.ToString("dd/MM/yyyy")<br />
                                            Due: @a.Deadline.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                        <!-- Download -->
                                        <a class="btnx"
                                           href="@(hasFile? Url.Content(a.FileUrl) : "javascript:void(0)")"
                                           target="_blank"
                                           style="@(hasFile ? "" : "opacity:.45; pointer-events:none;")">
                                            Download
                                        </a>
                                        <!-- Submit (compact) -->
                                        <form asp-area="Student"
                                              asp-controller="Assignment"
                                              asp-action="SubmitFile"
                                              method="post"
                                              enctype="multipart/form-data"
                                              class="subrow">

                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="assignmentId" value="@a.Id" />

                                            <!-- Dropzone -->
                                            <div class="dz dz-compact @(isOverdue ? "dz-disabled" : "")" data-dz>
                                                <input type="file"
                                                       id="file_@a.Id"
                                                       name="submissionFile"
                                                       class="dz-input"
                                                       accept=".pdf,.doc,.docx,.ppt,.pptx,.zip,.rar,.png,.jpg,.jpeg"
                                                       @(isOverdue ? "disabled" : "") />

                                                <label class="dz-box" for="file_@a.Id">
                                                    <span class="dz-ico">📎</span>
                                                    <span class="dz-title">Gửi bài làm</span>
                                                    <span class="dz-meta" data-dz-meta>Chưa chọn file</span>
                                                </label>

                                                <button class="dz-clear" type="button" data-dz-clear title="Clear" style="display:none;">✕</button>
                                            </div>

                                            <!-- Submit -->
                                            <button class="btnx primary"
                                                    type="submit"
                                                    id="btnSubmit_@a.Id"
                                                    disabled
                                                    style="opacity:.55; cursor:not-allowed; @(isOverdue ? "pointer-events:none;" : "")">
                                                @(a.AllowResubmit ? "Nộp lại" : "Nộp bài")
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- RIGHT sidebar (unchanged) -->
                <div class="cardx widget">
                    @* keep your existing sidebar markup exactly *@
                    <div class="mb-2" style="display:flex; align-items:center; justify-content:space-between; gap:10px;">
                        <h3 style="margin:0; font-weight:900;">Tổng quan</h3>
                        <span class="tag">Hôm nay</span>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài mới</span>
                        <strong>@newlyUploaded.Count</strong>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài tập sẵn có</span>
                        <strong>@available.Count</strong>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài tập quá hạn</span>
                        <strong style="color:var(--danger);">@overdue.Count</strong>
                    </div>

                    <a class="btnx primary mb-2" asp-area="Student" asp-controller="Courses" asp-action="Index">Tới Khóa học</a>
                    <a class="btnx" asp-area="Student" asp-controller="Home" asp-action="Index">Về trang chủ</a>

                    <div class="muted" style="margin-top:10px; line-height:1.5;">
                        Tip: if an assignment shows “Updated”, re-check the file — instructors love last-minute “minor edits”.
                    </div>
                </div>
            </div>
        </section>

        <section id="panel-overdue" class="tab-panel" role="tabpanel" aria-labelledby="tab-overdue">
            <div class="grid">
                <div class="cardx card-pad">
                    <div class="hrow">
                        <h3>Quá hạn</h3>
                        <div class="muted">Tài liệu tự học tự chấm</div>
                    </div>

                    @if (!overdueAll.Any())
                    {
                        <div class="muted" style="margin-top:10px;">Không có bài quá hạn.</div>
                    }
                    else
                    {
                        <div class="alist">
                            @foreach (var a in overdueAll)
                            {
                                var hasFile = !string.IsNullOrWhiteSpace(a.FileUrl);

                                <div class="a">
                                    <div class="a-left">
                                        <div class="ico">!</div>
                                        <div class="a-text">
                                            <div class="a-title" title="@a.Title">@a.Title</div>
                                            <div class="a-desc">Course #@a.CourseId : @a.Description</div>

                                            <div class="meta">
                                                <span class="tag">@FriendlyType(a.TypeSubmit)</span>
                                                <span class="tag danger">Quá hạn</span>
                                                <span class="tag gray">Uploaded: @a.CreateAt.ToString("dd/MM/yyyy")</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="a-right">
                                        <a class="btnx"
                                           href="@(hasFile? Url.Content(a.FileUrl) : "javascript:void(0)")"
                                           target="_blank"
                                           style="@(hasFile ? "" : "opacity:.45; pointer-events:none;")">
                                            Download
                                        </a>

                                        <div class="time">
                                            Expired: @a.Deadline.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                <!-- RIGHT sidebar (unchanged) -->
                <div class="cardx widget">
                    @* keep your existing sidebar markup exactly *@
                    <div class="mb-2" style="display:flex; align-items:center; justify-content:space-between; gap:10px;">
                        <h3 style="margin:0; font-weight:900;">Tổng quan</h3>
                        <span class="tag">Hôm nay</span>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài mới</span>
                        <strong>@newlyUploaded.Count</strong>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài tập sẵn có</span>
                        <strong>@available.Count</strong>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài tập quá hạn</span>
                        <strong style="color:var(--danger);">@overdue.Count</strong>
                    </div>

                    <a class="btnx primary mb-2" asp-area="Student" asp-controller="Courses" asp-action="Index">Tới Khóa học</a>
                    <a class="btnx" asp-area="Student" asp-controller="Home" asp-action="Index">Về trang chủ</a>

                    <div class="muted" style="margin-top:10px; line-height:1.5;">
                        Tip: if an assignment shows “Updated”, re-check the file — instructors love last-minute “minor edits”.
                    </div>
                </div>
            </div>
        </section>

        <section id="panel-submissions" class="tab-panel" role="tabpanel" aria-labelledby="tab-submissions">
            <div class="grid">
                <div class="cardx card-pad">
                    Hello
                </div>
                <!-- RIGHT sidebar (unchanged) -->
                <div class="cardx widget">
                    @* keep your existing sidebar markup exactly *@
                    <div class="mb-2" style="display:flex; align-items:center; justify-content:space-between; gap:10px;">
                        <h3 style="margin:0; font-weight:900;">Tổng quan</h3>
                        <span class="tag">Hôm nay</span>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài mới</span>
                        <strong>@newlyUploaded.Count</strong>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài tập sẵn có</span>
                        <strong>@available.Count</strong>
                    </div>

                    <div class="stat">
                        <span class="muted">Bài tập quá hạn</span>
                        <strong style="color:var(--danger);">@overdue.Count</strong>
                    </div>

                    <a class="btnx primary mb-2" asp-area="Student" asp-controller="Courses asp-action="Index">Tới Khóa học</a>
                    <a class="btnx" asp-area="Student" asp-controller="Home" asp-action="Index">Về trang chủ</a>

                    <div class="muted" style="margin-top:10px; line-height:1.5;">
                        Tip: if an assignment shows “Updated”, re-check the file — instructors love last-minute “minor edits”.
                    </div>
                </div>
            </div>
        </section>

    </div>
    <script>
        (function () {
          const tabs = Array.from(document.querySelectorAll(".tabs .tab[role='tab']:not([disabled])"));
          const panels = Array.from(document.querySelectorAll(".tab-panel[role='tabpanel']"));

          function activate(tab) {
            tabs.forEach(t => {
              const isActive = t === tab;
              t.classList.toggle("active", isActive);
              t.setAttribute("aria-selected", isActive ? "true" : "false");
            });

            const targetId = tab.getAttribute("data-target");
            panels.forEach(p => p.hidden = (p.id !== targetId));
          }

          tabs.forEach(tab => tab.addEventListener("click", () => activate(tab)));

          // default
          const first = tabs.find(t => t.classList.contains("active")) || tabs[0];
          if (first) activate(first);
        })();
                (function () {
          function setBtnState(dz, enabled){
            const btn = dz.closest("form")?.querySelector("button[type='submit']");
            if (!btn) return;

            btn.disabled = !enabled;
            if (btn.disabled) {
              btn.style.opacity = ".55";
              btn.style.cursor = "not-allowed";
            } else {
              btn.style.opacity = "";
              btn.style.cursor = "";
            }
          }

          document.querySelectorAll("[data-dz]").forEach(dz => {
            const input = dz.querySelector(".dz-input");
            if (!input) return;

            // If overdue (input disabled), keep submit disabled forever
            if (input.disabled) {
              setBtnState(dz, false);
              return;
            }

            const update = () => {
              const hasFile = input.files && input.files.length > 0;
              setBtnState(dz, hasFile);
            };

            input.addEventListener("change", update);

            // If you allow drag-drop into the label, this covers it too
            dz.addEventListener("drop", () => setTimeout(update, 0));

            // init state
            update();
          });
        })();
                (function () {
          function humanSize(bytes){
            const units = ["B","KB","MB","GB"];
            let i = 0, n = bytes || 0;
            while (n >= 1024 && i < units.length - 1) { n /= 1024; i++; }
            return `${n.toFixed(i === 0 ? 0 : 1)} ${units[i]}`;
          }

          document.querySelectorAll("[data-dz]").forEach(dz => {
            const input = dz.querySelector(".dz-input");
            const meta  = dz.querySelector("[data-dz-meta]");
            const clear = dz.querySelector("[data-dz-clear]");
            const submitBtn = dz.closest("form")?.querySelector("button[type='submit']");

            if (!input || !meta) return;

            function updateUI() {
              const f = input.files && input.files[0];

              if (!f) {
                meta.textContent = "Chưa chọn file";
                dz.classList.remove("dz-hasfile");
                if (clear) clear.style.display = "none";
                if (submitBtn) submitBtn.disabled = true;
                return;
              }

              meta.textContent = `${f.name} • ${humanSize(f.size)}`;
              dz.classList.add("dz-hasfile");
              if (clear) clear.style.display = "";
              if (submitBtn) submitBtn.disabled = false;
            }

            input.addEventListener("change", updateUI);

            // If your dropzone sets input.files on drop, this catches it:
            dz.addEventListener("drop", () => setTimeout(updateUI, 0));

            if (clear) {
              clear.addEventListener("click", () => {
                if (input.disabled) return;
                input.value = "";
                updateUI();
              });
            }

            updateUI();
          });
        })();
    </script>

</body>
