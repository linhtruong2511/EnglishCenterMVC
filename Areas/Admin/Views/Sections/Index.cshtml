@model IEnumerable<EnglishCenterMVC.Models.Section>

@{
    ViewData["Title"] = "Sections";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Section Management</h4>
        <a asp-action="Create" class="btn btn-primary">
            + Create Section
        </a>
    </div>

    <!-- Filter -->
    <div class="card shadow-sm border-0 mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">

                <div class="col-md-4">
                    <label class="form-label">Course</label>
                    <select name="courseId"
                            class="form-select"
                            asp-items="ViewBag.CourseId">
                        <option value="">-- All courses --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        Filter
                    </button>
                </div>

            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th style="width: 35%">Description</th>
                            <th style="width: 80px">Order</th>
                            <th>Course</th>
                            <th class="text-end" style="width: 140px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">
                                    @item.Name
                                </td>

                                <td class="text-muted small">
                                    @(item.Description?.Length > 80
                                                                    ? item.Description.Substring(0, 80) + "..."
                                                                    : item.Description)
                            </td>

                                <td>
                                    <span class="badge bg-secondary">
                                        @item.Order
                                    </span>
                                </td>

                                <td>
                                    @item.Course?.Name
                                </td>

                                <td class="text-end btn-group">
                                    <a asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-warning">
                                        Edit
                                    </a>
                                    <a asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-info text-white">
                                        Details
                                    </a>
                                    <a asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-danger">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                                                }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5"
                                    class="text-center text-muted py-4">
                                    No sections found.
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>
